{
    "id": "https://github.com/JavaScriptGraphNotation/jsgn-schema/blob/master/jsgn-edge-schema.json",
    "$schema": "http://json-schema.org/draft-04/schema",
    "definitions": { 
	"edge": {
            "type": "object",
            "additionalProperties": false,
            "properties": {
                "id": {
                    "type": [
		        "string",
			"integer"
		    ]
                },
                "sources": {
		    "type": "array",
                    "items": {
		        "type": [
		            "string",
			    "integer"
		        ]
		    }
                },
                "targets": {
		    "type": "array",
                    "items": {
		        "type": [
		            "string",
			    "integer"
		        ]
		    }
                },
                "relation": {
                    "type": "string"
                },
                "directed": {
                    "type": [
                        "boolean",
                        "null"
                    ],
                    "default": true
                 },
                 "label": {
                     "type": "string"
                 },
		 "node": {
		      "type": {
		          "$ref": "jsgn-node-schema.json#/definitions/node"
		      }  
	         },
                 "metadata": {
                     "type": [
                         "object",
                         "null"
                      ]
                 }
             },
             "required": [
                 "sources",
                 "targets"
             ]
	}
    }
}
